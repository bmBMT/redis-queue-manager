{
  "name": "redis-queue-manager",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "packages/*"
  ],
  "scripts": {
    "build:client": "npm run build -w client",
    "build:server": "npm run build -w server",
    "build:zod": "npm run build -w packages/zod",
    "build:prisma": "npm run build -w packages/prisma",
    "build:shared": "npm run build -w packages/shared",
    "build": "run-s build:*",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "dev": "run-p dev:*",
    "start:client": "npm run start -w client",
    "start:server": "npm run start -w server",
    "start": "run-p start:*",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'package-lock.json' -type f -delete && find . -name 'yarn.lock ' -type f -delete && find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "db:generate": "npm run generate -w packages/prisma",
    "db:migrate": "npm run migrate -w packages/prisma",
    "db:reset": "npm run reset -w packages/prisma",
    "db:seed": "npm run seed -w packages/prisma",
    "db:deploy": "npm run deploy -w packages/prisma"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "wait-port": "^1.1.0"
  }
}
